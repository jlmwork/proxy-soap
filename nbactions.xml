<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <packagings>
                <packaging>war</packaging>
                <packaging>ear</packaging>
                <packaging>ejb</packaging>
            </packagings>
            <goals>
                <goal>jetty:run</goal>
            </goals>
            <properties>
                
                <maven.test.skip>true</maven.test.skip>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <packagings>
                <packaging>war</packaging>
                <packaging>ear</packaging>
                <packaging>ejb</packaging>
            </packagings>
            <goals>
                <goal>jetty:run</goal>
            </goals>
            <properties>
                
                
                <jpda.listen>maven</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>test.single</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>test-compile</goal>
                <goal>surefire:test</goal>
            </goals>
            <properties>
                <test>${packageClassName}</test>
            </properties>
            <activatedProfiles>
                <activatedProfile>all-tests</activatedProfile>
            </activatedProfiles>
        </action>
    </actions>
