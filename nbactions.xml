<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>war</packaging>
            <packaging>ear</packaging>
            <packaging>ejb</packaging>
        </packagings>
        <goals>
            <goal>jetty:run</goal>
        </goals>
        <properties>

            <maven.test.skip>true</maven.test.skip>
        </properties>
    </action>
    <action>
        <actionName>debug</actionName>
        <packagings>
            <packaging>war</packaging>
            <packaging>ear</packaging>
            <packaging>ejb</packaging>
        </packagings>
        <goals>
            <goal>jetty:run</goal>
        </goals>
        <properties>


            <jpda.listen>maven</jpda.listen>
        </properties>
    </action>
    <action>
        <actionName>test.single</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>test-compile</goal>
            <goal>surefire:test</goal>
        </goals>
        <properties>
            <test>${packageClassName}</test>
        </properties>
        <activatedProfiles>
            <activatedProfile>all-tests</activatedProfile>
        </activatedProfiles>
    </action>
    <action>
        <actionName>build</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>test</goal>
        </goals>
    </action>
    <action>
        <actionName>rebuild</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>clean</goal>
            <goal>test</goal>
        </goals>
    </action>
    <action>
        <actionName>build-with-dependencies</actionName>
        <reactor>also-make</reactor>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>test</goal>
        </goals>
    </action>
    <action>
        <actionName>CUSTOM-Verify</actionName>
        <displayName>Verify</displayName>
        <goals>
            <goal>verify</goal>
        </goals>
    </action>
    <action>
        <actionName>CUSTOM-Install</actionName>
        <displayName>Install (maven)</displayName>
        <goals>
            <goal>install</goal>
        </goals>
    </action>
    <action>
        <actionName>CUSTOM-Deploy</actionName>
        <displayName>Deploy (maven)</displayName>
        <goals>
            <goal>deploy</goal>
        </goals>
    </action>
</actions>
